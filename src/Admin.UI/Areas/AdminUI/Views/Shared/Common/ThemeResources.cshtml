@using Skoruba.Duende.IdentityServer.Admin.UI.Configuration
@using Skoruba.Duende.IdentityServer.Shared.Configuration.Helpers
@inject AdminConfiguration AdminConfiguration

@if (Context.Request.Cookies.TryGetValue(ThemeHelpers.CookieThemeKey, out var themeKey) && themeKey != ThemeHelpers.DefaultTheme)
{
  <link href="@UrlHelper.Content($"~/dist/css/themes/{themeKey}/bootstrap.min.css"))" asp-append-version="true" rel="stylesheet" />
}
else if (!string.IsNullOrEmpty(AdminConfiguration.Theme))
{
  <link href="@UrlHelper.Content($"~/dist/css/themes/{AdminConfiguration.Theme}/bootstrap.min.css"))" asp-append-version="true" rel="stylesheet" />
}